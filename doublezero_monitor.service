[Unit]
Description=Doublezero IBRL monitor
After=network.target
OnFailure=doublezerod.service

[Service]
Type=simple
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/python3 /home/sol/doublezero_monitor/monitor_ibrl.py

# Send stdout and stderr to systemd journal
StandardOutput=journal
StandardError=journal

# Do not restart on crash/exit
Restart=no

[Install]
WantedBy=doublezerod.service
